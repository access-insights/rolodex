# Frontend
VITE_API_BASE=/api
VITE_AZURE_CLIENT_ID=your-azure-client-id
VITE_AZURE_TENANT_ID=your-azure-tenant-id
# Local dev should use Netlify dev origin
VITE_AZURE_REDIRECT_URI=http://localhost:8888
VITE_AZURE_POST_LOGOUT_REDIRECT_URI=http://localhost:8888/login

# Backend
# Full Postgres connection string (Supabase pooler preferred)
SUPABASE_DB_URL=postgresql://postgres:password@db.your-project-ref.supabase.co:5432/postgres?sslmode=require
AZURE_ISSUER=https://login.microsoftonline.com/your-tenant-id/v2.0
# Supports comma-separated audiences
AZURE_AUDIENCE=api://your-api-app-id
AZURE_JWKS_URI=https://login.microsoftonline.com/your-tenant-id/discovery/v2.0/keys
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-api-client-id
AZURE_REDIRECT_URI=http://localhost:8888/auth/popup-callback
AZURE_POST_LOGOUT_REDIRECT_URI=http://localhost:8888/login

# Optional defaults
# Must be a UUID that already exists in organizations.id
DEFAULT_ORG_ID=11111111-1111-1111-1111-111111111111
BOOTSTRAP_ADMIN_EMAIL=admin@example.com
WEBHOOK_SECRET=change-me
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
