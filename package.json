{
  "name": "rolodex",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.12.2",
    "npm": ">=10"
  },
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "netlify dev",
    "dev:web": "npm run dev --workspace apps/web",
    "build": "npm run build --workspace apps/web",
    "lint": "npm run lint --workspace apps/web && npm run lint:functions",
    "lint:functions": "tsc -p tsconfig.functions.json --noEmit",
    "test": "npm run test --workspace apps/web",
    "test:a11y": "npm run test:a11y --workspace apps/web",
    "test:e2e": "playwright test",
    "db:migrate": "bash scripts/db-migrate.sh",
    "db:seed": "bash scripts/db-seed.sh",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "install:all": "npm install --workspaces --include-workspace-root"
  },
  "dependencies": {
    "@netlify/functions": "^5.1.2",
    "@supabase/supabase-js": "^2.95.3",
    "jose": "^6.1.3",
    "pg": "^8.16.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.58.2",
    "@types/node": "^24.7.2",
    "@types/pg": "^8.15.5",
    "netlify-cli": "^23.15.1",
    "typescript": "^5.9.3"
  }
}
